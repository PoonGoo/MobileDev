<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DX1221_eLearning_wk3"
        tools:targetApi="31">

        <activity
            android:name=".main.MainMenu"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi,MissingClass">

        </activity>

        <activity
            android:name=".main.LoseMenu"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi,MissingClass">

        </activity>

        <activity
            android:name=".main.settingsActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi">
        </activity>

        <activity
            android:name=".main.AccordionActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi">
        </activity>

        <activity
            android:name=".mgp2d.core.GameActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi">
        </activity>

        <activity
            android:name=".main.SplashPage"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            tools:ignore="DiscouragedApi">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/game_services_project_id"/>

    </application>

</manifest>